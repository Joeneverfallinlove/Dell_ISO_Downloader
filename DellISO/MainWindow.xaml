<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DellISO.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Dell ISO Download">

    <Grid>
        <NavigationView x:Name="NavView" PaneDisplayMode="Left" SelectionChanged="NavView_SelectionChanged" Loaded="NavView_Loaded" IsSettingsVisible="False">
            <NavigationView.MenuItems>
                <NavigationViewItem Icon="Download" Content="Download" Tag="DownloadPage" />
                <NavigationViewItem Icon="Setting" Content="Setting" Tag="SettingPage" />
                <NavigationViewItem Icon="ContactInfo" Content="About" Tag="AboutPage" />
            </NavigationView.MenuItems>
            <Frame x:Name="ContentFrame" />
        </NavigationView>
    </Grid>
</Window>