<Page
    x:Class="DellISO.Views.DownloadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:local="using:DellISO.Views"
    mc:Ignorable="d">

    <Page.Resources>
        <local:BoolNegationConverter x:Key="BoolNegationConverter"/>
    </Page.Resources>

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Spacing="10">
            <TextBox x:Name="TagInput" Header="Service Tag" Width="200" 
                     Text="{x:Bind ViewModel.ServiceTag, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     PlaceholderText="ENTER TAG" TextChanging="OnTagChanging"/>

            <Button Content="Get Data" 
                    Command="{x:Bind ViewModel.FetchDataCommand}" 
                    IsEnabled="{x:Bind ViewModel.IsBusy, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}"
                    VerticalAlignment="Bottom" 
                    Style="{StaticResource AccentButtonStyle}"/>

            <Button Content="Show Log" Command="{x:Bind ViewModel.OpenLogCommand}" VerticalAlignment="Bottom"/>
        </StackPanel>

        <Pivot Grid.Row="1" Margin="0,10">
            <PivotItem Header="Images (ISO)">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <CheckBox x:Name="CbIso" Content="Select All" 
                              IsEnabled="{x:Bind ViewModel.HasIsoItems, Mode=OneWay}"
                              Command="{x:Bind ViewModel.ToggleIsoCommand}"
                              CommandParameter="{Binding ElementName=CbIso, Path=IsChecked}"
                              Margin="0,0,0,5"/>

                    <controls:DataGrid Grid.Row="1" ItemsSource="{x:Bind ViewModel.IsoList}" AutoGenerateColumns="False"
                                       ScrollViewer.HorizontalScrollBarVisibility="Visible"
                                       ScrollViewer.HorizontalScrollMode="Enabled">
                        <controls:DataGrid.Columns>
                            <controls:DataGridCheckBoxColumn Binding="{Binding IsSelected}" Header="Sel" Width="50"/>
                            <controls:DataGridTextColumn Binding="{Binding Title}" Header="File Name" Width="450"/>
                            <controls:DataGridTextColumn Binding="{Binding Version}" Header="Version" Width="120"/>
                            <controls:DataGridTextColumn Binding="{Binding ReleaseDate}" Header="Date" Width="120"/>
                            <controls:DataGridTextColumn Binding="{Binding FormattedSize}" Header="Size" Width="100"/>
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>
                </Grid>
            </PivotItem>

            <PivotItem Header="Drivers">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <CheckBox x:Name="CbDriver" Content="Select All" 
                              IsEnabled="{x:Bind ViewModel.HasDriverItems, Mode=OneWay}"
                              Command="{x:Bind ViewModel.ToggleDriverCommand}"
                              CommandParameter="{Binding ElementName=CbDriver, Path=IsChecked}"
                              Margin="0,0,0,5"/>

                    <controls:DataGrid Grid.Row="1" ItemsSource="{x:Bind ViewModel.DriverList}" AutoGenerateColumns="False"
                                       ScrollViewer.HorizontalScrollBarVisibility="Visible"
                                       ScrollViewer.HorizontalScrollMode="Enabled">
                        <controls:DataGrid.Columns>
                            <controls:DataGridCheckBoxColumn Binding="{Binding IsSelected}" Header="Sel" Width="50"/>
                            <controls:DataGridTextColumn Binding="{Binding Title}" Header="File Name" Width="450"/>
                            <controls:DataGridTextColumn Binding="{Binding Version}" Header="Version" Width="120"/>
                            <controls:DataGridTextColumn Binding="{Binding ReleaseDate}" Header="Date" Width="120"/>
                            <controls:DataGridTextColumn Binding="{Binding FormattedSize}" Header="Size" Width="100"/>
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>
                </Grid>
            </PivotItem>

            <PivotItem Header="SOS (WIM+RE)">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <CheckBox x:Name="CbWim" Content="Select All" 
                              IsEnabled="{x:Bind ViewModel.HasWimItems, Mode=OneWay}"
                              Command="{x:Bind ViewModel.ToggleWimCommand}"
                              CommandParameter="{Binding ElementName=CbWim, Path=IsChecked}"
                              Margin="0,0,0,5"/>

                    <controls:DataGrid Grid.Row="1" ItemsSource="{x:Bind ViewModel.WimList}" AutoGenerateColumns="False"
                                       ScrollViewer.HorizontalScrollBarVisibility="Visible"
                                       ScrollViewer.HorizontalScrollMode="Enabled">
                        <controls:DataGrid.Columns>
                            <controls:DataGridCheckBoxColumn Binding="{Binding IsSelected}" Header="Sel" Width="50"/>
                            <controls:DataGridTextColumn Binding="{Binding Title}" Header="File Name" Width="450"/>
                            <controls:DataGridTextColumn Binding="{Binding Version}" Header="Version" Width="120"/>
                            <controls:DataGridTextColumn Binding="{Binding ReleaseDate}" Header="Date" Width="120"/>
                            <controls:DataGridTextColumn Binding="{Binding FormattedSize}" Header="Size" Width="100"/>
                        </controls:DataGrid.Columns>
                    </controls:DataGrid>
                </Grid>
            </PivotItem>
        </Pivot>

        <StackPanel Grid.Row="2" Spacing="10" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Padding="15" CornerRadius="8" BorderThickness="1" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}">
            <Grid ColumnDefinitions="*, Auto">
                <StackPanel Spacing="5">
                    <TextBlock Text="{x:Bind ViewModel.CurrentFileName, Mode=OneWay}" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Spacing="20">
                        <TextBlock><Run Text="Speed: "/> <Run Text="{x:Bind ViewModel.DownloadSpeed, Mode=OneWay}"/></TextBlock>
                        <TextBlock><Run Text="Size: "/> <Run Text="{x:Bind ViewModel.TotalSizeDisplay, Mode=OneWay}"/></TextBlock>
                        <TextBlock><Run Text="ETA: "/> <Run Text="{x:Bind ViewModel.EtaDisplay, Mode=OneWay}"/></TextBlock>
                        <TextBlock><Run Text="Elapsed: "/> <Run Text="{x:Bind ViewModel.ElapsedTimeDisplay, Mode=OneWay}"/></TextBlock>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <Button Content="Download" Style="{StaticResource AccentButtonStyle}" Command="{x:Bind ViewModel.StartDownloadCommand}" 
                            IsEnabled="{x:Bind ViewModel.IsBusy, Converter={StaticResource BoolNegationConverter}, Mode=OneWay}"/>
                    <Button Content="Cancel" Command="{x:Bind ViewModel.CancelDownloadCommand}" 
                            IsEnabled="{x:Bind ViewModel.IsBusy, Mode=OneWay}"/>
                </StackPanel>
            </Grid>
            <ProgressBar Value="{x:Bind ViewModel.ProgressValue, Mode=OneWay}" Maximum="100"/>
            <TextBlock Text="{x:Bind ViewModel.StatusLog, Mode=OneWay}" Style="{ThemeResource CaptionTextBlockStyle}" Foreground="Gray"/>
        </StackPanel>
    </Grid>
</Page>