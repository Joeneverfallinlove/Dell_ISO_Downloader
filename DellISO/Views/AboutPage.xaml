<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="DellISO.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="8">

            <Image Source="ms-appx:///Assets/ps.png" 
               Width="128" 
               Height="128" 
               HorizontalAlignment="Center"
               Stretch="Uniform"
               Margin="0,0,0,4"/>
            <TextBlock Text="Dell ISO Downloader" 
                   Style="{StaticResource TitleTextBlockStyle}" 
                   HorizontalAlignment="Center"
                   FontWeight="Bold"/>

            <TextBlock Text="Made By Littlenine Ennea" 
                   FontSize="16" 
                   HorizontalAlignment="Center" 
                   Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                   Opacity="0.8"
                   Margin="0,0,0,4"/>

            <HyperlinkButton NavigateUri="https://t.me/Littlenine" 
                         HorizontalAlignment="Center"
                         Padding="4">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <Image Source="ms-appx:///Assets/telegram.png"
                       Width="18"
                       Height="18"
                       Stretch="Uniform"
                       VerticalAlignment="Center"/>
                    <TextBlock Text="Telegram: t.me/@Littlenine" 
                           VerticalAlignment="Center"
                           FontSize="14"/>
                </StackPanel>
            </HyperlinkButton>

            <HyperlinkButton NavigateUri="https://github.com/LittlenineEnnea/Dell_ISO_Downloader" 
                         HorizontalAlignment="Center"
                         Padding="4"
                         Margin="0,-4,0,0">
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <Image Source="ms-appx:///Assets/github.png"
                       Width="18"
                       Height="18"
                       Stretch="Uniform" 
                       VerticalAlignment="Center"/>
                    <TextBlock Text="Github: Dell_ISO_Downloader" 
                           VerticalAlignment="Center"
                           FontSize="14"/>
                </StackPanel>
            </HyperlinkButton>
        </StackPanel>
    </Grid>
</Page>